<div class="jumbotron">

    <div class="burger-box">
        <a href='/'><img src="/assets/img/burger.png"></a>

        <h1 class="burger-title">Eat Da Burger !</h1>
    </div>

    <h2 class="burger-subtitle">Enter the name of a burger you want to try -</h2>

    <form action="/burgers" class="create-form" method="POST">
            <input type="text" id="enter-burger" name="burger_name" class="form-control-lg burger-input">
            <button type="submit" class="btn" id="send-burger"> <i class="fas fa-hamburger"></i> Add a burger!</button>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="burger-subtitle">Dreaming of these -</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <form action="/burger/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" type="text" value={{this.id}}>
                        <li class="list">{{this.burger_name}}
                        <button type="submit" class="btn" id="burger-devour"> devour </button></li>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6" id="burgers-devoured">
            <h2 class="burger-subtitle">These became my destiny -</h2>
            <ul>
                <div>
                {{#each burgers}}
                {{#if this.devoured}}
                    <li class="list">{{this.burger_name}}</li>
                {{/if}}
                {{/each}}
                </div>
            </ul>
        </div>
    </div>
</div>